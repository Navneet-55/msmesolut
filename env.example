# ===========================================
# LUMINA AI - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string
DATABASE_URL="postgresql://postgres:password@localhost:5432/lumina_ai?schema=public"

# ===========================================
# AUTHENTICATION
# ===========================================
# JWT secret key (generate a secure random string)
# You can generate one with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# JWT token expiration (e.g., 1d, 7d, 30d)
JWT_EXPIRES_IN="7d"

# ===========================================
# API CONFIGURATION
# ===========================================
# Backend API port
PORT=4000

# Node environment (development, production, test)
NODE_ENV="development"

# Frontend URL (for CORS)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# AI PROVIDERS
# ===========================================
# Google Gemini API Key
# Get yours at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key"

# AI Provider to use (gemini, mock, python-enhanced)
AI_PROVIDER="mock"

# ===========================================
# PYTHON SERVICE (Optional)
# ===========================================
# Python FastAPI service URL
PYTHON_API_URL="http://localhost:5000"

# Enable Python-enhanced AI features
ENABLE_PYTHON_AI="false"

# ===========================================
# REDIS (Optional - for caching & queues)
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# EXTERNAL INTEGRATIONS (Optional)
# ===========================================
# Slack integration
SLACK_BOT_TOKEN=""
SLACK_SIGNING_SECRET=""

# Email (SMTP)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@lumina.ai"

# ===========================================
# MONITORING & LOGGING (Optional)
# ===========================================
# Log level (debug, info, warn, error)
LOG_LEVEL="info"

# Sentry DSN for error tracking
SENTRY_DSN=""

# ===========================================
# RATE LIMITING
# ===========================================
# Rate limit window in minutes
RATE_LIMIT_WINDOW="15"

# Max requests per window
RATE_LIMIT_MAX="100"

# ===========================================
# SECURITY
# ===========================================
# Allowed origins (comma-separated)
CORS_ORIGINS="http://localhost:3000"

# Session secret
SESSION_SECRET="your-session-secret-change-in-production"

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable demo mode with sample data
DEMO_MODE="true"

# Enable analytics tracking
ENABLE_ANALYTICS="false"

# Enable Python AI enhancements
ENABLE_PYTHON_ENHANCEMENTS="false"

